import PIL 
import numpy as np

image_frames = []

days = np.arange(1,366)

for i in days:
    new_frame = PIL.Image.open(r'E:\Thesis\Chapter 1(Precipitation comparison)\netcdf\APHRO_MA_050deg_V1101.2007 (1).nc\jpegs'+'\\'+ str(i) + '.jpg')
    image_frames.append(new_frame)


image_frames[0].save('precipitation timelapse30.gif', format = 'GIF',
                     append_images = image_frames[1: ],
                     save_all = True, duration = 30,
                     loop = 0)
